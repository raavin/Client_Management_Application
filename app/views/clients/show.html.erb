<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", clients_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_client_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", client_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.client.first_name", :default => t("activerecord.labels.first_name", :default => "First name")) %>:</b>
          <%= @client.first_name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.last_name", :default => t("activerecord.labels.last_name", :default => "Last name")) %>:</b>
          <%= @client.last_name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.birth_date", :default => t("activerecord.labels.birth_date", :default => "Birth date")) %>:</b>
          <%= @client.birth_date %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.country_id", :default => t("activerecord.labels.country_id", :default => "Country")) %>:</b>
          <%= @client.country_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.gender", :default => t("activerecord.labels.gender", :default => "Gender")) %>:</b>
          <%= @client.gender %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_client_path(@client), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", client_path(@client), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>