
  <div class="group">
    <%= f.label :first_name, t("activerecord.attributes.client.first_name", :default => "First name"), :class => :label %>
    <%= f.text_field :first_name, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :last_name, t("activerecord.attributes.client.last_name", :default => "Last name"), :class => :label %>
    <%= f.text_field :last_name, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :birth_date, t("activerecord.attributes.client.birth_date", :default => "Birth date"), :class => :label %>
    <%= f.date_select :birth_date, :order => [:day, :month, :year], :start_year => 1960, :end_year => Date.today.year, :class => 'date_select' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :country_id, t("activerecord.attributes.client.country_id", :default => "Country"), :class => :label %>
    <%= 
  if @client.country_id == nil
  country_selector 13
  else
  country_selector @client.country_id
  end 
%>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :gender, t("activerecord.attributes.client.gender", :default => "Gender"), :class => :label %>
    <%= radio_button("client", "gender", "0") %> male
    <%= radio_button("client", "gender", "1") %> female
    <span class="description">Ex: a simple text</span>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", clients_path, :class => "button" %> 
</div>