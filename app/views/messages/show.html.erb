<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", messages_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_message_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", message_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.message.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @message.user_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.message.service_id", :default => t("activerecord.labels.service_id", :default => "Service")) %>:</b>
          <%= @message.service_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.message.subject", :default => t("activerecord.labels.subject", :default => "Subject")) %>:</b>
          <%= @message.subject %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.message.body", :default => t("activerecord.labels.body", :default => "Body")) %>:</b>
          <%= @message.body %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_message_path(@message), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", message_path(@message), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>