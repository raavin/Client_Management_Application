<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
	    <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", client_expenditures_path  %></li>
  		<li><%= link_to "#{t("web-app-theme.new", :default => "Add New Casenote")}", new_client_expenditure_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> CaseNotes for <%= @client.first_name + " " + @client.last_name%></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>
					<%= t("activerecord.attributes.expenditure.user_id", :default => t("activerecord.labels.user_id", :default => "User_id")) %>
</th>
					          <th><%= t("web-app-theme.created_at", :default => "Description")  %></th>
					          <th><%= t("web-app-theme.created_at", :default => "Amount")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @expenditures.each do |expenditure| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= expenditure.id %>
          </td>
										<td>
					
						<%= expenditure.created_at %>
					</td>
										<td>
            <%= expenditure.description %>
          </td>
                              <td>
            $<%= expenditure.amount %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", client_expenditure_path(@client,expenditure) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_client_expenditure_path(@client,expenditure) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", client_expenditure_path(@client,expenditure), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>

          </td>
                    <td>

          </td>
                    <td>
            Total
          </td>
                              <td>
            $<%=Expenditure.sum('amount')%>
          </td>
          <td class="last">
          </td>
        </tr>

      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @expenditures  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>