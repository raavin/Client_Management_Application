   <div id="box">
      <div class="block" id="block-login">
        <h2>Login</h2>
        <div class="content">
          <div class="flash">
    <%if flash[:error]%>
          <div class="message error"><p><%= flash[:error] %></p></div>
    <%elsif flash[:warning]%>
          <div class="message warning"><p><%= flash[:warning] %></p></div>
    <%else%>
        <% if flash[:notice]%>
          <div class="message notice"><p><%= flash[:notice] %></p></div>
        <%end%>
    <%end%>
          </div>
<% form_for resource_name, resource, :url => session_path(resource_name),:html => { :class => "form"} do |f| -%>
            <div class="group wat-cf">
              <br />
              <div class="left">
                <label class="label right">email</label>
              </div>
              <div class="right">
                <%= f.text_field(:email, :class => "text_field") %>
              </div>
            </div>
            <div class="group wat-cf">
              <div class="left">
                <label class="label right">Password</label>
              </div>
              <div class="right">
                <%= f.password_field(:password, :class => "text_field") %>
              </div>
            </div>
            <% if devise_mapping.rememberable? -%>
            <div class="group wat-cf">
              <div class="left">
                <label class="label right">Remember Me</label>
              </div>
              <div class="right">
                <%= f.check_box :remember_me %>
              </div>
            </div>
            
            <div class="group navform wat-cf">
              <button class="button" type="submit">
                <img src="/images/web-app-theme/tick.png" alt="Save" /> Login
              </button>
            </div>
          <% end %>
        </div>
      </div>
 </div>
 <%= render :partial => "shared/devise_links" %>
 
<% end -%>
        
      
