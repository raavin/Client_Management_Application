<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", client_case_notes_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_client_case_note_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", client_case_note_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.case_note.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @case_note.user_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.case_note.client_id", :default => t("activerecord.labels.client_id", :default => "Client")) %>:</b>
          <%= @case_note.client_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.case_note.service_id", :default => t("activerecord.labels.service_id", :default => "Service")) %>:</b>
          <%= @case_note.service_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.case_note.subject", :default => t("activerecord.labels.subject", :default => "Subject")) %>:</b>
          <%= @case_note.subject %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.case_note.body", :default => t("activerecord.labels.body", :default => "Body")) %>:</b>
          <%= @case_note.body %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_client_case_note_path(@client,@case_note), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", client_case_note_path(@client,@case_note), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>